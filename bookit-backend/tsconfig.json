{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
